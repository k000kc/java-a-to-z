<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.apetrov.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>ru.apetrov.controller.SigninServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexPage</servlet-name>
        <servlet-class>ru.apetrov.controller.IndexPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPage</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjaxFindUsers</servlet-name>
        <servlet-class>ru.apetrov.controller.AjaxFindUsers</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AjaxFindUsers</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjsxAddUser</servlet-name>
        <servlet-class>ru.apetrov.controller.AjaxAddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjsxAddUser</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjsxUpdateUser</servlet-name>
        <servlet-class>ru.apetrov.controller.AjaxUpdateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjsxUpdateUser</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjsxDeleteUser</servlet-name>
        <servlet-class>ru.apetrov.controller.AjsxDeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjsxDeleteUser</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadRolesr</servlet-name>
        <servlet-class>ru.apetrov.controller.LoadRoles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadRolesr</servlet-name>
        <url-pattern>/loadroles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadMusics</servlet-name>
        <servlet-class>ru.apetrov.controller.LoadMusics</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadMusics</servlet-name>
        <url-pattern>/loadmusics</url-pattern>
    </servlet-mapping>

</web-app>